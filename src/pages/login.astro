---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Iniciar sesi칩n - Anti PN">
    <div class="relative flex h-full w-full">
        <div class="h-screen w-1/2 bg-black">
            <div
                class="mx-auto flex h-full w-2/3 flex-col justify-center text-white xl:w-1/2"
            >
                <div>
                    <p class="text-2xl">Acceso|</p>
                    <p>por favor inicia sesi칩n para continuar|</p>
                </div>
                <div class="mt-10">
                    <form>
                        <div>
                            <label
                                class="mb-2.5 block font-extrabold"
                                for="email">Correo o Nombre de usuario</label
                            >
                            <input
                                type="email"
                                id="email"
                                class="inline-block w-full rounded-full bg-white p-2.5 leading-none text-black placeholder-indigo-900 shadow placeholder:opacity-50"
                                placeholder="mail@user.com"
                            />
                        </div>
                        <div class="mt-4">
                            <label
                                class="mb-2.5 block font-extrabold"
                                for="email">Contrase침a</label
                            >
                            <input
                                type="password"
                                id="email"
                                class="inline-block w-full rounded-full bg-white p-2.5 leading-none text-black placeholder-indigo-900 shadow"
                                placeholder="****"
                            />
                        </div>
                        <div
                            class="mt-4 flex w-full flex-col justify-between sm:flex-row"
                        >
                            <!-- Remember me -->
                            <div>
                                <input type="checkbox" id="remember" /><label
                                    for="remember"
                                    class="mx-2 text-sm">Recordar</label>
                            </div>
                            <!-- Forgot password -->
                            <div>
                                <a href="#" class="text-sm hover:text-gray-300"
                                    >Olvidaste tu contrase침a</a
                                >
                            </div>
                        </div>
                        <div class="mt-10">
                            <button
                                class="w-full rounded-full bg-orange-600 p-5 hover:bg-orange-800"
                                >Iniciar sesion</button
                            >
                        </div>
                        <hr class="mt-4">
                        <div class="mt-4 text-center">
                            <button
                                class="w-22 rounded-full bg-gray-500 p-2 hover:bg-green-800"
                            >Crear nueva cuenta</button
                            >
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="h-screen w-1/2 bg-blue-600">
            <img
                src="https://images.pexels.com/photos/2523959/pexels-photo-2523959.jpeg"
                class="h-full w-full"
            />
        </div>
    </div>
</Layout>
